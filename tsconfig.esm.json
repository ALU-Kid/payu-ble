{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "module": "ES2020",
      "moduleResolution": "node",
      "target": "ES2020",
      "outDir": "./dist",
      "outExtension": {
        ".js": ".js"
      },
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "test",
      "examples",
      "**/*.spec.ts",
      "**/*.test.ts"
    ]
  }